{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 19, "patch": 0 },
  "configurePresets": [
    {
      "name": "default",
      "hidden": false,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "REQUIRE_MESHES": "OFF",
          "GENERATE_PLACEHOLDER_MESHES": "OFF",
          "USE_BUNDLED_GLM": "OFF"
      }
    },
    {
      "name": "require-meshes",
      "hidden": false,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "REQUIRE_MESHES": "ON"
      }
    }
    ,
    {
      "name": "bundled-glm",
      "hidden": false,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_BUNDLED_GLM": "ON",
        "GENERATE_PLACEHOLDER_MESHES": "ON",
        "REQUIRE_MESHES": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ]
}
